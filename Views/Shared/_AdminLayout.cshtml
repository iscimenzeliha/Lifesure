
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            background-color: #343a40;
            color: #fff;
            padding-top: 1rem;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                display: block;
                padding: 0.75rem 1rem;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        /* Header */
        .header {
            background-color: #fff;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #dee2e6;
        }

        /* Content */
        .content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar flex-shrink-0">
            <h4 class="text-center mb-4">Admin Panel</h4>
            <a href="/About/AboutList">About</a>
            <a href="/Employee/EmployeeList">Employees</a>
            <a href="/Feature/Index">Features</a>
            <a href="/Service/ServiceList">Services</a>
            <a href="/Faq/FaqList">FAQ</a>
            <a href="/Testimonial/TestimonialList">Testimonial</a>
            <a href="/Contact/ContactList">Contact</a>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Header -->
            <div class="header d-flex justify-content-between align-items-center">
                <h5>@ViewBag.PageTitle</h5>
                <div>
                    <span class="me-3">Admin</span>
                    <a href="/Account/Logout" class="btn btn-sm btn-outline-danger">Logout</a>
                </div>
            </div>

            <!-- Content Area -->
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
