﻿@model  Proje7MVC.Models.DataModels.Services

@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>GÜNCELLE</h2>
<section>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <form method="post">
                        <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <input type="text" class="form-control" name="Description" value="@Model.Description">
                        </div>                  
                        <div class="form-group">
                            <label>Image URL</label>
                            <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>Icon</label>
                            <input type="text" class="form-control" name="Icon" value="@Model.Icon">
                        </div>
                        <button class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
