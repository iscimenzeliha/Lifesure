@model  List<Proje7MVC.Models.DataModels.Features>
<div class="container-fluid feature bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">@Resources.Site.t2</h4>
            <h1 class="display-4 mb-4">@Resources.Site.t</h1>
            <p class="mb-0">
                @Resources.Site.t1
            </p>
        </div>
        <div class="row align-items-stretch">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 mb-4">
                    <div class="feature-item h-100 d-flex flex-column justify-content-between p-4 pt-0">
                        <div>
                            <div class="feature-icon p-4 mb-4">
                                <i class="@item.Icon" style="font-size: 3rem;"></i>
                            </div>
                            <h4 class="mb-4">@item.Title</h4>
                            <p class="mb-4">@item.Description</p>
                        </div>
                        <a class="btn btn-primary rounded-pill py-2 px-4 mt-auto" href="#">Daha fazla</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
