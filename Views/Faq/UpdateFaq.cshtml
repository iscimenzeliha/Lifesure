@model Proje7MVC.Models.DataModels.Faqs

@{
    ViewBag.Title = "UpdateFaq";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <form method="post">
                        <input type="hidden" name="FaqId" value="@Model.FaqId" />
                        <div class="form-group">
                            <label>SORU PROMPT</label>
                            <input type="text" class="form-control" name="QuestionPrompt" value="@Model.QuestionPrompt">
                        </div>
                        <div class="form-group">
                            <label>SORU</label>
                            <input type="text" class="form-control" name="Question" value="@Model.Question">
                        </div>
                        <div class="form-group">
                            <label>CEVAP</label>
                            <textarea class="form-control" rows="5" name="Answer">@Model.Answer</textarea>
                        </div>
                        <button class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>